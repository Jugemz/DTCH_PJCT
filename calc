<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mortgage Calculator</title>
    <!-- Tailwind CSS for modern styling -->
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f3f4f6;
        }
    </style>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen p-4">

    <div class="bg-white p-8 rounded-3xl shadow-2xl w-full max-w-2xl">
        <h1 class="text-3xl md:text-4xl font-extrabold text-blue-800 text-center mb-6">Mortgage Calculator</h1>
        <p class="text-center text-gray-600 mb-8">Enter the details below to estimate your monthly payments.</p>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Inputs Section -->
            <div class="space-y-6">
                <!-- Loan Amount Input -->
                <div>
                    <label for="loanAmount" class="block text-sm font-medium text-gray-700 mb-2">Loan Amount</label>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-500">$</span>
                        <input type="number" id="loanAmount" value="240000" min="0" step="1000" class="w-full pl-7 pr-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors">
                    </div>
                </div>
                
                <!-- Interest Rate Input -->
                <div>
                    <label for="interestRate" class="block text-sm font-medium text-gray-700 mb-2">Annual Interest Rate (%)</label>
                    <div class="relative">
                        <input type="number" id="interestRate" value="4.5" min="0" step="0.1" class="w-full pl-3 pr-7 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors">
                        <span class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-500">%</span>
                    </div>
                </div>

                <!-- Loan Term Input -->
                <div>
                    <label for="loanTerm" class="block text-sm font-medium text-gray-700 mb-2">Loan Term (Years)</label>
                    <input type="number" id="loanTerm" value="30" min="1" step="1" class="w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors">
                </div>
            </div>

            <!-- Results Section -->
            <div class="flex flex-col justify-center items-center bg-gray-50 p-6 rounded-2xl shadow-inner">
                <h2 class="text-2xl font-bold mb-4 text-center text-blue-700">Monthly Payment</h2>
                <div id="monthlyPaymentResult" class="text-5xl md:text-6xl font-extrabold text-blue-700">
                    $0.00
                </div>

                <div class="w-full mt-8 space-y-4">
                    <div class="flex justify-between items-center text-gray-600">
                        <span class="font-medium">Total Principal Paid:</span>
                        <span id="totalPrincipalResult" class="font-bold text-gray-800">$0.00</span>
                    </div>
                    <div class="flex justify-between items-center text-gray-600">
                        <span class="font-medium">Total Interest Paid:</span>
                        <span id="totalInterestResult" class="font-bold text-gray-800">$0.00</span>
                    </div>
                    <div class="flex justify-between items-center text-gray-600">
                        <span class="font-medium">Total Cost:</span>
                        <span id="totalCostResult" class="font-bold text-gray-800">$0.00</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Get references to all input elements
        const loanAmountInput = document.getElementById('loanAmount');
        const interestRateInput = document.getElementById('interestRate');
        const loanTermInput = document.getElementById('loanTerm');

        // Get references to all result display elements
        const monthlyPaymentResult = document.getElementById('monthlyPaymentResult');
        const totalPrincipalResult = document.getElementById('totalPrincipalResult');
        const totalInterestResult = document.getElementById('totalInterestResult');
        const totalCostResult = document.getElementById('totalCostResult');

        /**
         * Formats a number as a currency string.
         * @param {number} amount - The number to format.
         * @returns {string} The formatted currency string.
         */
        const formatCurrency = (amount) => {
            return new Intl.NumberFormat('en-US', {
                style: 'currency',
                currency: 'USD',
                minimumFractionDigits: 2,
                maximumFractionDigits: 2,
            }).format(amount);
        };

        /**
         * Calculates and displays the mortgage payment and totals.
         */
        const calculateMortgage = () => {
            // Get values from inputs and convert to numbers
            const P = parseFloat(loanAmountInput.value);
            const annualRate = parseFloat(interestRateInput.value);
            const years = parseFloat(loanTermInput.value);

            // Basic input validation
            if (isNaN(P) || isNaN(annualRate) || isNaN(years) || P <= 0 || annualRate < 0 || years <= 0) {
                monthlyPaymentResult.textContent = '$0.00';
                totalPrincipalResult.textContent = '$0.00';
                totalInterestResult.textContent = '$0.00';
                totalCostResult.textContent = '$0.00';
                return; // Exit the function if inputs are invalid
            }
            
            // Convert annual rate to monthly rate and years to months
            const r = (annualRate / 100) / 12;
            const n = years * 12;

            let M;
            if (r === 0) {
                // Handle a 0% interest rate to avoid division by zero
                M = P / n;
            } else {
                // The standard mortgage payment formula
                M = P * (r * Math.pow(1 + r, n)) / (Math.pow(1 + r, n) - 1);
            }

            // Calculate total principal, interest, and cost
            const totalPaid = M * n;
            const totalInterest = totalPaid - P;

            // Update the display with the calculated values
            monthlyPaymentResult.textContent = formatCurrency(M);
            totalPrincipalResult.textContent = formatCurrency(P);
            totalInterestResult.textContent = formatCurrency(totalInterest);
            totalCostResult.textContent = formatCurrency(totalPaid);
        };

        // Add event listeners to trigger calculation on input change
        loanAmountInput.addEventListener('input', calculateMortgage);
        interestRateInput.addEventListener('input', calculateMortgage);
        loanTermInput.addEventListener('input', calculateMortgage);
        
        // Initial calculation when the page loads
        document.addEventListener('DOMContentLoaded', calculateMortgage);

    </script>
</body>
</html>
